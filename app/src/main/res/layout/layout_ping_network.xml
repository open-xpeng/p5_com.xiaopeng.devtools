<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:id="@+id/layout_network_ping" android:layout_width="match_parent" android:layout_height="64dp" android:layout_marginTop="32dp" android:layout_centerVertical="true">
    <TextView android:textSize="@dimen/mobile_network_text" android:textColor="@android:color/white" android:gravity="center" android:id="@+id/network_ping_header" android:layout_width="wrap_content" android:layout_height="match_parent" android:text="@string/network_ping_test"/>
    <EditText android:textSize="@dimen/mobile_network_text" android:id="@+id/et_ping_packagesize" android:layout_width="wrap_content" android:layout_height="match_parent" android:layout_marginLeft="10dp" android:hint="8" android:ems="8" android:maxLength="5" android:numeric="integer" android:layout_toRightOf="@+id/network_ping_header" android:layout_centerVertical="true"/>
    <Button android:id="@+id/network_ping_bt" android:layout_width="140dp" android:layout_height="match_parent" android:layout_marginLeft="64dp" android:text="@string/test" android:layout_toRightOf="@+id/et_ping_packagesize" android:layout_centerVertical="true" style="@style/ItemTestButton"/>
    <TextView android:textSize="@dimen/mobile_network_text" android:gravity="center" android:id="@+id/result_ping_tv" android:layout_width="wrap_content" android:layout_height="match_parent" android:layout_alignParentRight="true"/>
</RelativeLayout>
