                <Button android:id="@+id/alarm_energy_system_mismatch" android:text="@string/nation_detection_alarm_energy_system_mismatch" style="@style/FactoryTestButton"/>
                <Button android:id="@+id/alarm_batt_bad_consistency" android:text="@string/nation_detection_alarm_batt_bad_consistency" style="@style/FactoryTestButton"/>
                <Button android:id="@+id/alarm_insulation" android:text="@string/nation_detection_alarm_insulation" style="@style/FactoryTestButton"/>
            </LinearLayout>
            <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" style="@style/FactoryTestRow">
                <Button android:id="@+id/alarm_dcdc_temp" android:text="@string/nation_detection_alarm_dcdc_temp" style="@style/FactoryTestButton"/>
                <Button android:id="@+id/alarm_brake_system" android:text="@string/nation_detection_alarm_brake_system" style="@style/FactoryTestButton"/>
                <Button android:id="@+id/alarm_dcdc_status" android:text="@string/nation_detection_alarm_dcdc_status" style="@style/FactoryTestButton"/>
                <Button android:id="@+id/alarm_motor_brake_temp" android:text="@string/nation_detection_alarm_motor_brake_temp" style="@style/FactoryTestButton"/>
            </LinearLayout>
            <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" style="@style/FactoryTestRow">
                <Button android:id="@+id/alarm_high_pressure_interlock" android:text="@string/nation_detection_alarm_high_pressure_interlock" style="@style/FactoryTestButton"/>
                <Button android:id="@+id/alarm_motor_temp" android:text="@string/nation_detection_alarm_motor_temp" style="@style/FactoryTestButton"/>
                <Button android:id="@+id/alarm_energy_storage_over_charge" android:text="@string/nation_detection_alarm_energy_storage_over_charge" style="@style/FactoryTestButton"/>
                <Button android:id="@+id/alarm_above_all" android:text="@string/nation_detection_alarm_above_all" style="@style/FactoryTestButton"/>
            </LinearLayout>
            <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" style="@style/FactoryTestRow">
                <Button android:id="@+id/return_main" android:text="@string/nation_detection_return_main" style="@style/FactoryTestButton"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
