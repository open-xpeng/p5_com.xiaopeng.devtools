                <Button android:id="@+id/alarm_batt_high_temp" android:text="@string/nation_detection_alarm_batt_high_temp" style="@style/FactoryTestButton"/>
                <Button android:id="@+id/alarm_energy_high_pressure" android:text="@string/nation_detection_alarm_energy_high_pressure" style="@style/FactoryTestButton"/>
                <Button android:id="@+id/alarm_energy_low_pressure" android:text="@string/nation_detection_alarm_energy_low_pressure" style="@style/FactoryTestButton"/>
            </LinearLayout>
            <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" style="@style/FactoryTestRow">
                <Button android:id="@+id/alarm_low_soc" android:text="@string/nation_detection_alarm_low_soc" style="@style/FactoryTestButton"/>
                <Button android:id="@+id/alarm_batt_high_pressure" android:text="@string/nation_detection_alarm_batt_high_pressure" style="@style/FactoryTestButton"/>
                <Button android:id="@+id/alarm_batt_low_pressure" android:text="@string/nation_detection_alarm_batt_low_pressure" style="@style/FactoryTestButton"/>
                <Button android:id="@+id/alarm_high_soc" android:text="@string/nation_detection_alarm_high_soc" style="@style/FactoryTestButton"/>
            </LinearLayout>
            <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" style="@style/FactoryTestRow">
