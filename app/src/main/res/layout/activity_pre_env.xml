    <Button android:textSize="32sp" android:textColor="@drawable/text_color" android:gravity="center" android:id="@+id/bt_remove_pre_env" android:background="@drawable/selector_btn_common" android:layout_width="700dp" android:layout_height="130dp" android:layout_marginTop="50dp" android:text="@string/text_remove_pre_env"/>
