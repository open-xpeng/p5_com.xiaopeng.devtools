<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:gravity="center_horizontal" android:orientation="vertical" android:id="@+id/root" android:layout_width="match_parent" android:layout_height="match_parent">
    <com.xiaopeng.devtools.view.ActionBar android:id="@+id/action_bar" android:layout_width="match_parent" android:layout_height="wrap_content"/>
    <TextView android:textSize="32sp" android:id="@+id/tv_pre_env_status" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="150dp"/>
