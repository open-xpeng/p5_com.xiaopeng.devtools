<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
    <TextView android:textSize="30sp" android:layout_gravity="center_horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/text_wifi_performance"/>
    <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="15dp">
        <TextView android:textSize="24sp" android:id="@+id/tv_wifi_status" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1"/>
        <TextView android:textSize="24sp" android:id="@+id/tv_bt_status" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1"/>
    </LinearLayout>
    <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="15dp">
        <TextView android:textSize="24sp" android:id="@+id/tv_wifi_name" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1"/>
        <TextView android:textSize="24sp" android:id="@+id/tv_bt_name" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1"/>
    </LinearLayout>
    <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="15dp">
        <TextView android:textSize="24sp" android:id="@+id/tv_wifi_strength" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1"/>
        <TextView android:textSize="24sp" android:id="@+id/tv_bt_strength" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1"/>
    </LinearLayout>
    <TextView android:textSize="24sp" android:id="@+id/tv_wifi_speed" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="15dp"/>
    <TextView android:textSize="24sp" android:id="@+id/tv_wifi_mac" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="15dp"/>
    <TextView android:textSize="24sp" android:id="@+id/tv_wifi_ip" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="15dp"/>
</LinearLayout>
