<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:id="@+id/activity_hw_and_sw_info" android:paddingLeft="@dimen/activity_horizontal_margin" android:paddingTop="@dimen/activity_vertical_margin" android:paddingRight="@dimen/activity_horizontal_margin" android:paddingBottom="@dimen/activity_vertical_margin" android:layout_width="match_parent" android:layout_height="match_parent">
    <com.xiaopeng.devtools.view.ActionBar android:id="@+id/action_bar" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_alignParentTop="true" app:centerTextResId="@string/show_soft_hard_ware_info"/>
    <ScrollView android:paddingTop="@dimen/padding_top_content" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_below="@+id/action_bar" android:layout_alignParentLeft="true" android:layout_alignParentStart="true">
        <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
            <TextView android:textSize="@dimen/common_txt_size" android:textColor="@android:color/white" android:id="@+id/tv_car_code" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/text_car_code"/>
            <ImageView android:id="@+id/iv_car_code" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="100dp" android:layout_marginTop="18dp" android:src="@drawable/icon_loading"/>
            <TextView android:textSize="@dimen/common_txt_size" android:textColor="@android:color/white" android:id="@+id/tv_device_code" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="24dp" android:text="@string/text_device_code"/>
            <ImageView android:id="@+id/iv_device_code" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="100dp" android:layout_marginTop="18dp"/>
            <TextView android:textSize="@dimen/common_txt_size" android:textColor="@android:color/white" android:id="@+id/tv_device_number" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="24dp" android:text="@string/text_device_number"/>
            <ImageView android:id="@+id/iv_device_number" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="100dp" android:layout_marginTop="18dp"/>
            <TextView android:id="@+id/tv_psu_version" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="24dp" style="@style/FactoryTestText"/>
            <TextView android:id="@+id/tv_hw_info" android:layout_width="wrap_content" android:layout_height="wrap_content" style="@style/FactoryTestText"/>
            <TextView android:id="@+id/tv_sw_info" android:layout_width="wrap_content" android:layout_height="wrap_content" style="@style/FactoryTestText"/>
            <TextView android:id="@+id/tv_mcu_info" android:layout_width="wrap_content" android:layout_height="wrap_content" style="@style/FactoryTestText"/>
            <TextView android:id="@+id/tv_vehicle_id" android:layout_width="wrap_content" android:layout_height="wrap_content" style="@style/FactoryTestText"/>
        </LinearLayout>
    </ScrollView>
    <LinearLayout android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_alignParentBottom="true">
        <include android:layout_width="match_parent" android:layout_height="wrap_content" layout="@layout/layout_factory_test_common"/>
    </LinearLayout>
</RelativeLayout>
