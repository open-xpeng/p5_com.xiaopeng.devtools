            <TextView android:textSize="@dimen/common_txt_size" android:textStyle="bold" android:id="@+id/batterychargemodevalue" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout android:orientation="horizontal" android:id="@+id/batteryvoltage" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/chargemode">
            <TextView android:textSize="@dimen/common_txt_size" android:textStyle="bold" android:id="@+id/batteryvoltagetitle" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/battery_voltage"/>
            <TextView android:textSize="@dimen/common_txt_size" android:textStyle="bold" android:id="@+id/batteryvoltagevalue" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout android:orientation="horizontal" android:id="@+id/batterysoc" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/batteryvoltage">
            <TextView android:textSize="@dimen/common_txt_size" android:textStyle="bold" android:id="@+id/batterysoctitle" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/battery_soc"/>
            <TextView android:textSize="@dimen/common_txt_size" android:textStyle="bold" android:id="@+id/batterysocvalue" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout android:orientation="horizontal" android:id="@+id/dc_impedance" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/batterysoc">
            <TextView android:textSize="@dimen/common_txt_size" android:textStyle="bold" android:id="@+id/dc_impedancetitle" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/battery_impedance"/>
            <TextView android:textSize="@dimen/common_txt_size" android:textStyle="bold" android:id="@+id/dc_impedancevalue" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout android:orientation="horizontal" android:id="@+id/batterysoh" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/dc_impedance">
            <TextView android:textSize="@dimen/common_txt_size" android:textStyle="bold" android:id="@+id/batterysohtitle" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/battery_soh"/>
            <TextView android:textSize="@dimen/common_txt_size" android:textStyle="bold" android:id="@+id/batterysohvalue" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout android:orientation="horizontal" android:id="@+id/cell_connect" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/batterysoh">
            <TextView android:textSize="@dimen/common_txt_size" android:textStyle="bold" android:id="@+id/cell_connecttitle" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/battery_cell_connect"/>
            <TextView android:textSize="@dimen/common_txt_size" android:textStyle="bold" android:id="@+id/cell_connectvalue" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout android:orientation="horizontal" android:id="@+id/stepup_state" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/cell_connect">
            <TextView android:textSize="@dimen/common_txt_size" android:textStyle="bold" android:id="@+id/stepup_statetitle" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/battery_stepup_state"/>
            <TextView android:textSize="@dimen/common_txt_size" android:textStyle="bold" android:id="@+id/stepup_statevalue" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout android:orientation="horizontal" android:id="@+id/stepup_volt" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/stepup_state">
            <TextView android:textSize="@dimen/common_txt_size" android:textStyle="bold" android:id="@+id/stepup_volttitle" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/battery_stepup_volt"/>
            <TextView android:textSize="@dimen/common_txt_size" android:textStyle="bold" android:id="@+id/stepup_voltvalue" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout android:orientation="horizontal" android:id="@+id/indischarging" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/stepup_volt">
            <TextView android:textSize="@dimen/common_txt_size" android:textStyle="bold" android:id="@+id/indischargingtitle" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/battery_indischarging"/>
            <TextView android:textSize="@dimen/common_txt_size" android:textStyle="bold" android:id="@+id/indischargingvalue" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
