        <LinearLayout android:orientation="horizontal" android:id="@+id/discharge_current" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/indischarging">
            <TextView android:textSize="@dimen/common_txt_size" android:textStyle="bold" android:id="@+id/discharge_currenttitle" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/battery_discharge_current"/>
            <TextView android:textSize="@dimen/common_txt_size" android:textStyle="bold" android:id="@+id/discharge_currentvalue" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout android:orientation="horizontal" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="500dp" android:layout_alignParentBottom="true" style="@style/FactoryTestRow">
        <Button android:id="@+id/btn_test_stop_discharge" android:text="@string/battery_stop_discharge" style="@style/FactoryTestButton"/>
        <Button android:id="@+id/btn_test_enable_discharge" android:text="@string/battery_enable_discharge" style="@style/FactoryTestButton"/>
    </LinearLayout>
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="16dp" android:layout_alignParentBottom="true">
        <include android:layout_width="match_parent" android:layout_height="wrap_content" layout="@layout/layout_factory_test_common"/>
    </LinearLayout>
</RelativeLayout>
