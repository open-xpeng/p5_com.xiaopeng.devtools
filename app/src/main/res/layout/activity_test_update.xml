<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:orientation="vertical" android:paddingLeft="@dimen/activity_horizontal_margin" android:paddingTop="@dimen/activity_vertical_margin" android:paddingRight="@dimen/activity_horizontal_margin" android:paddingBottom="@dimen/activity_vertical_margin" android:layout_width="match_parent" android:layout_height="match_parent">
    <com.xiaopeng.devtools.view.ActionBar android:id="@+id/action_bar" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_alignParentTop="true" app:centerTextResId="@string/text_test_update"/>
    <ScrollView android:scrollbars="vertical" android:fadingEdge="none" android:layout_width="match_parent" android:layout_height="match_parent">
        <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
            <Button android:id="@+id/btn_state_usb" android:background="@drawable/bg_btn_blue" android:layout_width="match_parent" android:layout_height="100px" android:layout_marginTop="200px" android:text="@string/search_usb" android:layout_centerHorizontal="true" style="@style/text_style_white"/>
            <Button android:id="@+id/btn_update_mcu" android:background="@drawable/bg_btn_blue" android:layout_width="match_parent" android:layout_height="100px" android:layout_marginTop="70px" android:text="@string/update_mcu" android:layout_centerHorizontal="true" style="@style/text_style_white"/>
            <Button android:id="@+id/btn_update_tbox" android:background="@drawable/bg_btn_blue" android:layout_width="match_parent" android:layout_height="100px" android:layout_marginTop="70px" android:text="@string/update_tbox" android:layout_centerHorizontal="true" style="@style/text_style_white"/>
            <Button android:id="@+id/btn_update_meter" android:background="@drawable/bg_btn_blue" android:visibility="gone" android:layout_width="match_parent" android:layout_height="100px" android:layout_marginTop="70px" android:text="@string/update_meter" android:layout_centerHorizontal="true" style="@style/text_style_white"/>
            <Button android:id="@+id/btn_update_psu" android:background="@drawable/bg_btn_blue" android:layout_width="match_parent" android:layout_height="100px" android:layout_marginTop="70px" android:text="@string/update_psu" android:layout_centerHorizontal="true" style="@style/text_style_white"/>
            <Button android:id="@+id/btn_upgrade_modem" android:background="@drawable/bg_btn_blue" android:layout_width="match_parent" android:layout_height="100px" android:layout_marginTop="70px" android:text="@string/text_modem_upgrade" android:layout_centerHorizontal="true" style="@style/text_style_white"/>
            <Button android:id="@+id/btn_upgrade_screenFir" android:background="@drawable/bg_btn_blue" android:layout_width="match_parent" android:layout_height="100px" android:layout_marginTop="70px" android:text="@string/update_screenFir" android:layout_centerHorizontal="true" style="@style/text_style_white"/>
            <Button android:id="@+id/btn_upgrade_xpuFir" android:background="@drawable/bg_btn_blue" android:layout_width="match_parent" android:layout_height="100px" android:layout_marginTop="70px" android:text="@string/update_xpu_firm" android:layout_centerHorizontal="true" style="@style/text_style_white"/>
            <Button android:id="@+id/btn_upgrade_icm" android:background="@drawable/bg_btn_blue" android:layout_width="match_parent" android:layout_height="100px" android:layout_marginTop="70px" android:text="@string/update_icm" android:layout_centerHorizontal="true" style="@style/text_style_white"/>
            <Button android:id="@+id/btn_reset_system" android:background="@drawable/bg_btn_blue" android:layout_width="match_parent" android:layout_height="100px" android:layout_marginTop="70px" android:text="@string/recovery" android:layout_centerHorizontal="true" style="@style/text_style_white"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
