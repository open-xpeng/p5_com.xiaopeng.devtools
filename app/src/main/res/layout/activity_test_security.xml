<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent" android:layout_height="match_parent">
    <com.xiaopeng.devtools.view.ActionBar android:id="@+id/action_bar" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_alignParentTop="true" app:centerTextResId="@string/text_test_security"/>
    <LinearLayout android:orientation="vertical" android:paddingTop="@dimen/padding_top_content" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_below="@+id/action_bar">
        <RelativeLayout android:layout_width="match_parent" android:layout_height="64dp" android:layout_marginTop="32dp" android:layout_centerVertical="true">
            <TextView android:textSize="@dimen/mobile_network_text" android:textColor="@android:color/white" android:gravity="center" android:id="@+id/connect_cert_wifi_header" android:layout_width="wrap_content" android:layout_height="match_parent" android:layout_marginLeft="64dp" android:text="@string/ssl_key_wifi"/>
            <Button android:id="@+id/bt_connect_cert_wifi" android:layout_width="140dp" android:layout_height="match_parent" android:layout_marginLeft="64dp" android:text="@string/connect" android:layout_toRightOf="@+id/connect_cert_wifi_header" android:layout_centerVertical="true" style="@style/ItemTestButton"/>
            <TextView android:textSize="@dimen/mobile_network_text" android:textColor="@android:color/white" android:gravity="center" android:id="@+id/result_cert_exist" android:layout_width="wrap_content" android:layout_height="match_parent" android:layout_marginRight="64dp" android:text="@string/text_cert_exist_or_not" android:layout_toLeftOf="@+id/result_cert_verified"/>
            <TextView android:textSize="@dimen/mobile_network_text" android:textColor="@android:color/white" android:gravity="center" android:id="@+id/result_cert_verified" android:layout_width="wrap_content" android:layout_height="match_parent" android:layout_marginRight="64dp" android:text="@string/text_cert_verify_ok_or_not" android:layout_alignParentRight="true"/>
        </RelativeLayout>
        <View android:background="@android:color/white" android:layout_width="match_parent" android:layout_height="1dp" android:layout_marginTop="5dp"/>
        <RelativeLayout android:layout_width="match_parent" android:layout_height="64dp" android:layout_marginTop="32dp" android:layout_centerVertical="true">
            <TextView android:textSize="@dimen/mobile_network_text" android:textColor="@android:color/white" android:gravity="center" android:id="@+id/cdu_cert_header" android:layout_width="wrap_content" android:layout_height="match_parent" android:layout_marginLeft="64dp" android:text="@string/text_cdu_cert"/>
            <EditText android:id="@+id/et_cdu_cert" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="match_parent" android:layout_marginLeft="64dp" android:ems="15" android:layout_toRightOf="@+id/cdu_cert_header" android:layout_centerVertical="true" android:inputType="text"/>
            <Button android:enabled="false" android:id="@+id/bt_get_cdu_cert" android:layout_width="140dp" android:layout_height="match_parent" android:layout_marginLeft="64dp" android:text="@string/text_get_cert" android:layout_toRightOf="@+id/et_cdu_cert" android:layout_centerVertical="true" style="@style/ItemTestButton"/>
            <Button android:id="@+id/bt_save_cdu_cert" android:visibility="gone" android:layout_width="140dp" android:layout_height="match_parent" android:layout_marginLeft="64dp" android:text="@string/text_save_cert" android:layout_toRightOf="@+id/bt_get_cdu_cert" android:layout_centerVertical="true" style="@style/ItemTestButton"/>
            <TextView android:textSize="@dimen/mobile_network_text" android:textStyle="bold" android:textColor="@android:color/white" android:gravity="center" android:id="@+id/result_cdu_cert_file" android:layout_width="wrap_content" android:layout_height="match_parent" android:layout_marginRight="64dp" android:layout_toLeftOf="@+id/result_cdu_cert_exist"/>
            <TextView android:textSize="@dimen/mobile_network_text" android:textStyle="bold" android:gravity="center" android:id="@+id/result_cdu_cert_exist" android:layout_width="wrap_content" android:layout_height="match_parent" android:layout_marginRight="250dp" android:layout_toLeftOf="@+id/result_cdu_cert_verified"/>
            <TextView android:textSize="@dimen/mobile_network_text" android:textStyle="bold" android:gravity="center" android:id="@+id/result_cdu_cert_verified" android:layout_width="wrap_content" android:layout_height="match_parent" android:layout_marginRight="150dp" android:layout_alignParentRight="true"/>
        </RelativeLayout>
        <View android:background="@android:color/white" android:layout_width="match_parent" android:layout_height="1dp" android:layout_marginTop="5dp"/>
        <RelativeLayout android:layout_width="match_parent" android:layout_height="64dp" android:layout_marginTop="32dp" android:layout_centerVertical="true">
            <TextView android:textSize="@dimen/mobile_network_text" android:textColor="@android:color/white" android:gravity="center" android:id="@+id/tbox_cert_header" android:layout_width="wrap_content" android:layout_height="match_parent" android:layout_marginLeft="64dp" android:text="@string/text_tbox_cert"/>
            <Button android:enabled="false" android:id="@+id/bt_get_tbox_cert" android:layout_width="140dp" android:layout_height="match_parent" android:layout_marginLeft="64dp" android:text="@string/text_get_cert" android:layout_toRightOf="@+id/tbox_cert_header" android:layout_centerVertical="true" style="@style/ItemTestButton"/>
            <TextView android:textSize="@dimen/mobile_network_text" android:textStyle="bold" android:gravity="center" android:id="@+id/result_tbox_cert_exist" android:layout_width="wrap_content" android:layout_height="match_parent" android:layout_marginRight="250dp" android:layout_toLeftOf="@+id/result_tbox_cert_verified"/>
            <TextView android:textSize="@dimen/mobile_network_text" android:textStyle="bold" android:gravity="center" android:id="@+id/result_tbox_cert_verified" android:layout_width="wrap_content" android:layout_height="match_parent" android:layout_marginRight="150dp" android:layout_alignParentRight="true"/>
        </RelativeLayout>
        <View android:background="@android:color/white" android:layout_width="match_parent" android:layout_height="1dp" android:layout_marginTop="5dp"/>
        <RelativeLayout android:layout_width="match_parent" android:layout_height="64dp" android:layout_marginTop="32dp" android:layout_centerVertical="true">
            <TextView android:textSize="@dimen/mobile_network_text" android:textColor="@android:color/white" android:gravity="center" android:id="@+id/psu_cert_header" android:layout_width="wrap_content" android:layout_height="match_parent" android:layout_marginLeft="64dp" android:text="@string/text_psu_cert"/>
            <Button android:enabled="false" android:id="@+id/bt_get_psu_cert" android:layout_width="140dp" android:layout_height="match_parent" android:layout_marginLeft="64dp" android:text="@string/text_get_cert" android:layout_toRightOf="@+id/psu_cert_header" android:layout_centerVertical="true" style="@style/ItemTestButton"/>
            <TextView android:textSize="@dimen/mobile_network_text" android:textStyle="bold" android:gravity="center" android:id="@+id/result_psu_cert_exist" android:layout_width="wrap_content" android:layout_height="match_parent" android:layout_marginRight="250dp" android:layout_toLeftOf="@+id/result_psu_cert_verified"/>
            <TextView android:textSize="@dimen/mobile_network_text" android:textStyle="bold" android:gravity="center" android:id="@+id/result_psu_cert_verified" android:layout_width="wrap_content" android:layout_height="match_parent" android:layout_marginRight="150dp" android:layout_alignParentRight="true"/>
        </RelativeLayout>
        <View android:background="@android:color/white" android:layout_width="match_parent" android:layout_height="1dp" android:layout_marginTop="5dp"/>
        <RelativeLayout android:layout_width="match_parent" android:layout_height="64dp" android:layout_marginTop="32dp" android:layout_centerVertical="true">
            <TextView android:textSize="@dimen/mobile_network_text" android:textColor="@android:color/white" android:gravity="center" android:id="@+id/wifi_cert_header" android:layout_width="wrap_content" android:layout_height="match_parent" android:layout_marginLeft="64dp" android:text="@string/text_wifi_cert"/>
            <Button android:enabled="false" android:id="@+id/bt_get_wifi_cert" android:layout_width="140dp" android:layout_height="match_parent" android:layout_marginLeft="64dp" android:text="@string/text_get_cert" android:layout_toRightOf="@+id/wifi_cert_header" android:layout_centerVertical="true" style="@style/ItemTestButton"/>
            <TextView android:textSize="@dimen/mobile_network_text" android:textStyle="bold" android:gravity="center" android:id="@+id/result_wifi_cert_exist" android:layout_width="wrap_content" android:layout_height="match_parent" android:layout_marginRight="250dp" android:layout_toLeftOf="@+id/result_wifi_cert_verified"/>
            <TextView android:textSize="@dimen/mobile_network_text" android:textStyle="bold" android:gravity="center" android:id="@+id/result_wifi_cert_verified" android:layout_width="wrap_content" android:layout_height="match_parent" android:layout_marginRight="150dp" android:layout_alignParentRight="true"/>
        </RelativeLayout>
        <View android:background="@android:color/white" android:layout_width="match_parent" android:layout_height="1dp" android:layout_marginTop="5dp"/>
    </LinearLayout>
    <LinearLayout android:id="@+id/layout_common" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="16dp" android:layout_alignParentBottom="true">
        <include layout="@layout/layout_aftersales_common"/>
    </LinearLayout>
</RelativeLayout>
