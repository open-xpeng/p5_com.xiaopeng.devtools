<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent" android:layout_height="64dp" android:layout_marginTop="32dp" android:layout_centerVertical="true">
    <TextView android:textSize="@dimen/bluetooth_text" android:textColor="@android:color/white" android:gravity="center" android:id="@+id/bluetooth_address_header" android:layout_width="wrap_content" android:layout_height="match_parent" android:text="@string/bluetooth_addr_test"/>
    <Button android:id="@+id/bluetooth_addr_get_bt" android:paddingLeft="5dp" android:paddingRight="5dp" android:layout_width="wrap_content" android:layout_height="match_parent" android:layout_marginLeft="10dp" android:text="@string/get" android:layout_toRightOf="@+id/bluetooth_address_header" android:layout_centerVertical="true" style="@style/ItemTestButton"/>
    <TextView android:textSize="@dimen/bluetooth_text" android:textColor="@android:color/white" android:gravity="center_vertical" android:id="@+id/bluetooth_show_addr_tv" android:visibility="invisible" android:layout_width="wrap_content" android:layout_height="match_parent" android:layout_marginLeft="10dp" android:text="@string/bluetooth_addr" android:layout_toRightOf="@+id/bluetooth_addr_get_bt"/>
    <TextView android:textSize="@dimen/bluetooth_text" android:gravity="center" android:id="@+id/result_addr_tv" android:layout_width="wrap_content" android:layout_height="match_parent" android:layout_alignParentRight="true"/>
</RelativeLayout>
